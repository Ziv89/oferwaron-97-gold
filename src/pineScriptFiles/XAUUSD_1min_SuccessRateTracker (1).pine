
//@version=5
indicator("XAUUSD 1min - Success Rate Tracker", overlay=true)

// === הגדרות ===
tpMult = 1.3
slMult = 0.8
atrLen = 14

// === אינדיקטורים ===
rsi = ta.rsi(close, 14)
[macdLine, signalLine, _] = ta.macd(close, 12, 26, 9)
atr = ta.atr(atrLen)

// === תנאים לכניסה לשוק ===
longCond = rsi < 40 and ta.crossover(macdLine, signalLine)
shortCond = rsi > 60 and ta.crossunder(macdLine, signalLine)

// === משתנים ===
var float entry = na
var float sl = na
var float tp = na
var int trades = 0
var int wins = 0
var label lbl = na

// === בדיקת עסקה חדשה ===
if (longCond or shortCond)
    entry := close
    sl := entry - atr * slMult * (longCond ? 1 : -1)
    tp := entry + atr * tpMult * (longCond ? 1 : -1)
    trades += 1

// === בדיקת הצלחה או כישלון ===
if not na(entry)
    if (longCond and high >= tp) or (shortCond and low <= tp)
        wins += 1
        entry := na
    else if (longCond and low <= sl) or (shortCond and high >= sl)
        entry := na

// === חישוב והצגת אחוז הצלחה ===
successPerc = trades > 0 ? (wins * 100.0) / trades : na
clr = successPerc >= 95 ? color.green : successPerc >= 90 ? color.blue : successPerc >= 80 ? color.orange : color.gray

if (longCond or shortCond)
    lbl := label.new(bar_index, high + 3 * syminfo.mintick,
      text=str.tostring(successPerc, "#.##") + "%",
      style=label.style_label_down,
      color=clr, textcolor=color.white, size=size.large)
