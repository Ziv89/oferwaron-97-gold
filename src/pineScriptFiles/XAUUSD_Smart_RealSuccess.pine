//@version=5
strategy("XAUUSD Smart Strategy - Real Success Rate", overlay=true, default_qty_type=strategy.percent_of_equity, default_qty_value=10)

// === אינדיקטורים ===
[macdLine, signalLine, _] = ta.macd(close, 12, 26, 9)
rsi = ta.rsi(close, 14)
atr = ta.atr(14)
vwapLine = ta.vwap

// === תנאים לכניסה לעסקה ===
longCond = ta.crossover(macdLine, signalLine) and rsi > 50 and close > vwapLine
shortCond = ta.crossunder(macdLine, signalLine) and rsi < 50 and close < vwapLine

// === חישוב TP/SL ===
longTP = close + atr * 2
longSL = close - atr * 1.5
shortTP = close - atr * 2
shortSL = close + atr * 1.5

// === ביצוע עסקאות ===
if longCond
    strategy.entry("Long", strategy.long)
    strategy.exit("Long TP/SL", from_entry="Long", limit=longTP, stop=longSL)
    alert("Long Entry", alert.freq_once_per_bar)

if shortCond
    strategy.entry("Short", strategy.short)
    strategy.exit("Short TP/SL", from_entry="Short", limit=shortTP, stop=shortSL)
    alert("Short Entry", alert.freq_once_per_bar)

// === חישוב הצלחה אמיתי מהמערכת ===
totalTrades = strategy.closedtrades
winTrades = strategy.wintrades
successPerc = winTrades > 0 ? (winTrades * 100) / totalTrades : 0

// === צבע לפי הצלחה ===
color successColor = na
if successPerc >= 95
    successColor := color.green
else if successPerc >= 90
    successColor := color.blue
else if successPerc >= 80
    successColor := color.yellow
else
    successColor := color.red

// === הצגת אחוז הצלחה על הגרף ===
var label lbl = na
if not na(lbl)
    label.delete(lbl)

lbl := label.new(
    x=bar_index + 2,
    y=high,
    text="Success (Live): " + str.tostring(successPerc, "#.0") + "%",
    style=label.style_label_down,
    color=successColor,
    textcolor=color.white,
    size=size.large
)